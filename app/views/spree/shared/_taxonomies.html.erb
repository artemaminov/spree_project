<% cache [I18n.locale, @taxonomies, inside_li_tag] do %>
  <% if @taxonomies %>
    <% @taxonomies.each do |taxonomy| %>
      <% taxon = taxonomy.taxons.first %>
      <% link = link_to(taxon.name, seo_url(taxon), class: 'item') %>
      <%= inside_li_tag ? content_tag(:li, link) : content_tag(:div, link, class: 'item') %>
    <% end %>
  <% end %>
<% end %>
