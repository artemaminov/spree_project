<div class="form-group">
  <%= f.label "Родительская страница" %>
  <%= f.select :parent_id,
               options_for_select(Spree::Page.all.collect { |s| [s.title, s.id] }, selected: @page.parent_id),
               { include_blank: "Не выбран" }, class: 'select2' %>
</div>

<div class="form-group">
  <%= f.label "Позиция в родительском меню" %>
  <%= f.number_field :parent_position, min: 0, class: 'form-control' %>
</div>