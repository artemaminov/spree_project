<%= content_for :head do %>
<%= javascript_include_tag 'rcrop/rcrop.min' %>
<%= javascript_include_tag 'spree/backend/cropper' %>
<%= stylesheet_link_tag 'rcrop/rcrop.min' %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: plural_resource_name(Spree::Slider)), spree.admin_sliders_path, icon: 'arrow-left', class: 'btn-primary' %>
<% end %>

<%= form_for [:admin, resource] do |f| %>
  <div class="row" data-hook="admin_page_form_fields">
    <div class="col-lg-6" data-hook="admin_page_form_left">

      <%= field_container f.object, :title, class: ['form-group'] do %>
        <%= f.label :page %>
        <%= f.text_field :page, class: 'form-control', required: true %>
        <%= f.error_message_on :page %>
      <% end %>

    </div>
    <div class="col-lg-6" data-hook="admin_page_form_right">

      <%= field_container f.object, :title, class: ['form-group'] do %>
        <%= f.label :page_id %>
        <%= f.text_field :page_id, class: 'form-control' %>
        <%= f.error_message_on :page_id %>
      <% end %>

    </div>
  </div>
  <div class="row" data-hook="admin_page_form_additional_fields">
    <div class="col-lg-12" data-hook="admin_page_form_left">
      <%= f.fields_for :slides, resource.slides || resource.slides.build do |slide| %>
        <%= render partial: 'spree/admin/slides/form_fields', locals: { f: slide, resource: slide.object } %>
      <% end %>
    </div>
  </div>

  <%= render "spree/admin/shared/#{resource.new_record? ? 'new' : 'edit'}_resource_links" %>
<% end %>
