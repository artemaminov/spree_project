<%= render partial: 'spree/admin/users/sidebar', locals: { current: :seller } %>
<%= render partial: 'spree/admin/users/user_page_actions' %>

<% content_for :page_title do %>
  <%= link_to @user.email, spree.seller_admin_user_url(@user) %> /
  <%= Spree.t(:seller_title) %>
<% end %>

<div data-hook="admin_user_seller" id="admin_user_edit_seller">
  <div data-hook="admin_user_edit_form_header">
    <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @user } %>
  </div>

  <div data-hook="admin_user_address_edit_form">
    <%= form_for [:admin, @user], as: :seller, url: seller_admin_user_url(@user), method: :put do |f| %> 
		<% if false %>
			<%= f.field_container :company_name, class: ['form-group'] do %>
				<%= f.label :company_name, Spree.t(:company_name) %>
				<%= f.text_field :company_name, class: 'form-control' %>
				<%= f.error_message_on :company_name %>
			<% end %>
			
			<%= f.field_container :company_inn, class: ['form-group'] do %>
				<%= f.label :company_inn, Spree.t(:company_inn) %>
				<%= f.text_field :company_inn, class: 'form-control' %>
				<%= f.error_message_on :company_inn %>
			<% end %>
			
			<%= f.field_container :company_address, class: ['form-group'] do %>
				<%= f.label :company_address, Spree.t(:company_address) %>
				<%= f.text_field :company_address, class: 'form-control' %>
				<%= f.error_message_on :company_address %>
			<% end %>
			
			<%= f.field_container :company_rs, class: ['form-group'] do %>
				<%= f.label :company_rs, Spree.t(:company_rs) %>
				<%= f.text_field :company_rs, class: 'form-control' %>
				<%= f.error_message_on :company_rs %>
			<% end %>
			
			<%= f.field_container :company_bank, class: ['form-group'] do %>
				<%= f.label :company_rs, Spree.t(:company_bank) %>
				<%= f.text_field :company_bank, class: 'form-control' %>
				<%= f.error_message_on :company_bank %>
			<% end %>
			
			<%= f.field_container :company_kors, class: ['form-group'] do %>
				<%= f.label :company_kors, Spree.t(:company_kors) %>
				<%= f.text_field :company_kors, class: 'form-control' %>
				<%= f.error_message_on :company_kors %>
			<% end %>
		<% end %> 	
	
	
      <div class="form-actions text-center well" data-hook="admin_user_edit_form_button">
        <%= render partial: 'spree/admin/shared/edit_resource_links', locals: { collection_url: spree.admin_users_url } %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'spree/admin/users/lifetime_stats' %>
